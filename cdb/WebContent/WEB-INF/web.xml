<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>cdb</display-name>
 <display-name>Computer Database</display-name>
	<servlet>
		<servlet-name>Dashboard</servlet-name>
		<servlet-class>com.excilys.cdb.servlet.DashboardServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>EditComputer</servlet-name>
		<servlet-class>com.excilys.cdb.servlet.EditComputerServlet</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>AddComputer</servlet-name>
		<servlet-class>com.excilys.cdb.servlet.AddComputerServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Dashboard</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>EditComputer</servlet-name>
		<url-pattern>/editComputer</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>AddComputer</servlet-name>
		<url-pattern>/addComputer</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>dashboard</welcome-file>
	</welcome-file-list>
	
	<error-page>
		<error-code>403</error-code>
		<location>/views/403.html</location>
	</error-page>	
	<error-page>
		<error-code>404</error-code>
		<location>/views/404.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/views/500.html</location>
</error-page>
</web-app>